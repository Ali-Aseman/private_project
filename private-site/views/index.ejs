      if (username === "ali" && password === "123456789") {
        authenticated = true;
        alert("ورود موفق! خوش آمدید shapari 🌟");
      } else {
        alert("نام کاربری یا رمز اشتباه است! دوباره تلاش کنید.");
      }
    }
  </script>
</head>
